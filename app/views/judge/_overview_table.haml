%table{:id => "judge-table"}
  %thead
    %tr
      %th Contestant
      - @problems.each do |problem|
        %th 
          Problem:
          = problem.name
  %tbody
    - @contestants.each do |contestant|
      %tr
        %td
          = contestant.profile.full_name
        - @problems.each do |problem|
          - if problem.get_solution_for(contestant)
            %td
              = link_to "See solution", [@competition, problem, problem.get_solution_for(contestant)], |
                :remote => :true, :class => "link"
          - else
            %td
              Pendiente
    

#judge-solution-dialog{:title => "Solution"}
  %p Test
